# Copy this file to .env and fill values for production or set these in Railway environment variables
# Do NOT commit real secrets to Git

# Postgres connection string (set from Railway Postgres plugin)
DATABASE_URL=postgresql://<user>:<password>@<host>:<port>/<db>

# Port (Railway provides PORT automatically, but you can set one)
PORT=3000

# JWT secret for signing tokens
JWT_SECRET=change_this_to_a_secure_random_value

# Optional external API keys
RESEND_API_KEY=
FORGE_API_URL=
FORGE_API_KEY=

EMAIL_FROM="PlanIT <no-reply@example.com>"
OWNER_EMAIL=your-email@example.com

# Oauth redirect / server url if needed
OAUTH_SERVER_URL=https://your-production-domain

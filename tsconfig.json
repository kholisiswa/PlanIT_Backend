{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@server/*": ["server/*"],
      "@drizzle/*": ["drizzle/*"]
    },
    "types": ["node", "express"],
    "outDir": "dist"
  },
  "include": ["server/**/*", "shared/**/*", "drizzle/**/*", "api/**/*", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
